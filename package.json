{
  "name": "caesar-salad",
  "version": "1.0.1",
  "description": "Caesar, Vigenere and ROT Ciphers.",
  "license": "MIT",
  "keywords": [
    "Caesar",
    "Cipher",
    "Vigenere",
    "ROT",
    "ROT13",
    "ROT18",
    "ROT47",
    "ROT5"
  ],
  "preferGlobal": false,
  "engines": {
    "node": ">=4.0"
  },
  "repository": "schnittstabil/caesar-salad-cli.git",
  "author": {
    "name": "Michael Mayer",
    "email": "michael@schnittstabil.de",
    "url": "schnittstabil.de"
  },
  "dependencies": {
    "char-buffer": "^1.0.0"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "chalk": "^1.1.3",
    "coveralls": "^2.11.11",
    "del-cli": "^0.2.0",
    "execa": "^0.4.0",
    "nyc": "^7.1.0-candidate3",
    "xo": "^0.16.0",
    "yuidocjs": "^0.10.2"
  },
  "xo": {
    "ignores": [
      "**/.nyc_output/**",
      "**/coverage/**",
      "**/gh-pages/**",
      "resources/yuidoc/**",
      "config.js",
      "build.js"
    ],
    "overrides": [
      {
        "files": "test/_mocha.js",
        "envs": [
          "mocha",
          "browser"
        ],
        "globals": [
          "exposeMochaResults",
          "xpect"
        ]
      }
    ]
  },
  "main": "index.js",
  "files": [
    "caesar.js",
    "index.js",
    "password.js",
    "rot13.js",
    "rot18.js",
    "rot47.js",
    "rot5.js",
    "substitution-cipher.js",
    "vigenere.js"
  ],
  "scripts": {
    "test": "xo && ava",
    "test-cover": "xo && nyc ava",
    "test-cover-html": "npm run test-cover && nyc report --reporter=html",
    "docs": "del 'gh-pages/**' '!gh-pages' '!gh-pages/index.html' '!gh-pages/.git' '!gh-pages/.git/**' && yuidoc"
  }
}
